{% extends 'base.html.twig' %}

{% block title %}{{ 'leaderboard.show.title'|trans }}{% endblock %}

{% block content %}
    <table id="leaderboard">
        <thead>
        <tr>
            <th>Player</th>
            <th>Games</th>
            <th>Won</th>
            <th>Lost</th>
            <th>Draw</th>
        </tr>
        </thead>
        <tbody>
    {% for player in leaderboard %}
        <tr>
            <td>{{ player.player }}</td>
            <td>{{ player.games|length }}</td>
            <td>{{ player.won|length }}</td>
            <td>{{ player.lost|length }}</td>
            <td>{{ player.draw|length }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
