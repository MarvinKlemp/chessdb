{% extends 'baseList.html.twig' %}

{% block title %}{{ parent() }} {{ 'import.list.title'|trans }}{% endblock %}
{% block headline %}{{ 'import.list.title'|trans }}{% endblock %}

{% block game %}
    {{ pgn(game.pgnString, {'data-show-header': "true", 'data-display-headers': 'White,Black,Result'}) }}

    <a href="{{ path('app_import_game', {'uuid': game.uuid}) }}" class="button" style="width: 85%">
        {{ 'import.list.link_to_import'|trans }}
    </a>

    <a href="{{ path('app_import_deletepgn', {'uuid': game.uuid}) }}" class="button button-outline" style="width: 10%; margin-left: 3%">
        {{ 'import.list.delete_pgn'|trans }}
    </a>
{% endblock %}
